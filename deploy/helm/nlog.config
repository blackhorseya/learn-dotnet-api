<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info">

    <!-- enable asp.net core layout renderers -->
    <extensions>
        <add assembly="NLog.Web.AspNetCore"/>
    </extensions>

    <!-- the targets to write to -->
    <targets async="true">
        <!-- write logs to console  -->
        <target xsi:type="ColoredConsole" name="Console"
                layout="${longdate}|${event-properties:item=EventId_Id}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}" />

        <!-- write request logs to console -->
        <target xsi:type="ColoredConsole" name="RequestTrackerConsole"
                layout="${longdate}|${uppercase:${level}}|${logger}|${message}|url: ${aspnet-request-url} |action: ${aspnet-mvc-action} |request-body: ${aspnet-request-posted-body} |request-headers: ${aspnet-request-headers} |status: ${aspnet-response-statuscode} |srcip: ${aspnet-request-ip}" />

        <!-- write exception logs to console -->
        <target xsi:type="ColoredConsole" name="ExceptionHandlerConsole"
                layout="${longdate}|${uppercase:${level}}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url} |action: ${aspnet-mvc-action}" />
    </targets>

    <!-- rules to map from logger name to target -->
    <rules>
        <!-- write to request tracker console -->
        <logger name="RequestTracker" level="Info" writeTo="RequestTrackerConsole" final="true" />

        <!-- write to exception handler console -->
        <logger name="ExceptionHandler" level="Error" writeTo="ExceptionHandlerConsole" final="true" />

        <!--All logs, including from Microsoft-->
        <logger name="*" minlevel="Trace" writeTo="Console" />
    </rules>
</nlog>